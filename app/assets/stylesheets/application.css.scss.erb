/* BODY */

body {
	margin: 0 auto;
}

/* LAYOUT */

#nav {
	background-color: #AE8AED;
	padding-bottom: 1%;

	.time {
		padding-bottom: 3%;
		font-family: 'Quicksand', sans-serif;
		font-size: 15px;
	}

	#nav_buttons {
		float: right;
		text-align: left;
		color: white;
		padding-right: 2%;
		padding-top: 1%;
		font-family: 'Quicksand', sans-serif;
		font-size: 15px;
	}

	.btn {
		background-color: transparent;
		color: white;
		font-family: 'Quicksand', sans-serif;
		font-size: 16px;
		border: solid white;
	}
}

