<div class="container" id="newevent">
  <div class="row">

    <h2>Host a Sess</h2>
    <p>Be the next host!</p>

    <%= form_for @event do |f| %>
      <div>
        <%= f.date_field :date, placeholder: "Date", :class => "datetime" %>
      </div>
      
      <div>
        <%= f.time_field :time, placeholder: "Time", :class => "datetime" %>
      </div>
      <br>
      <div>
        <%= f.text_field :address, placeholder: "Address", :class => "field" %>
      </div>
      <div>
        <%= f.text_field :host, placeholder: "Your Name", :class => "field" %>
      </div>
      <br>
      <%= f.submit "Host", :class => "btn btn-outline-primary" %>

    <% end %>
  </div>
</div>