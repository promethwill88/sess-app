<%= form_for @event do |f| %>
  <div>
    <%= f.date_field :date, placeholder: "Date" %>
  </div>
  <div>
    <%= f.time_field :time, placeholder: "Time" %>
  </div>
  <div>
    <%= f.text_field :address, placeholder: "Address" %>
  </div>
  <div>
    <%= f.text_field :host, placeholder: "Host" %>
  </div>
  
  <%= f.submit "Save Event" %>

<% end %>